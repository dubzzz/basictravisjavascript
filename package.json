  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dubzzz/basictravisjavascript/issues"
  },
  "homepage": "https://github.com/dubzzz/basictravisjavascript#readme",
  "devDependencies": {
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.0",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0"
  }
}
